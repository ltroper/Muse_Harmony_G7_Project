extends layout.pug

block content
    button.modal-show(onclick="document.getElementById('modal').style.display='block'") Create account
    div.modal-container#modal
        form.modal-form(action="/users/signup" method="POST")
            span.close-btn(onclick="document.getElementById('modal').style.display='none'")
                    i(class="fa-solid fa-rectangle-xmark")
                div.modal-img
                    img.wolf-img(src='./images/WOLF-Main.png' alt='Logo of Wolf')
                div.modal-inputs
                    input(type="hidden" name="_csrf" value=csrfToken)
                    label(for="username") Username
                    input(type="text" name="username" value=user.username required)
                    label(for="email") Email
                    input(type="email" name="email" value=user.email required)
                    label(for="password") Password
                    input(type="password" name="password" required)
                    label(for="confirmPassword") Confirm Password
                    input(type="password" name="confirmPassword" required)
                div.modal-btn
                    button.submit-btn Submit
                    button.cancel-btn Cancel

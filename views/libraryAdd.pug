extends layout.pug

block content
    form(action="library/add" method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
        label(for="libraryName") Name of Library
            input(type="text" id="libraryName")
            div(class='py-4')
                button(type='submit' class='') Add Library
                a(href='/libraries' class='') Cancel

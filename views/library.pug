extends layout.pug

append head
    script(src="/javascripts/library.js" type="module")
    link(rel="stylesheet" href="/stylesheets/library.css")

block content
    p(class= "hidden" id="userId" )= userId
    .library-container(id="libraryName")= nameToPass
        a(href="/albums")
            button(id= "removeLibraryButton" type='submit') Remove Library
    .table-container
        table
            thead
                tr
                    th(scope='col') Album Name
                    th(scope='col') Album Cover
                    th(scope='col') Album Name
            tbody
                each album in albumList
                    tr
                        td
                                a(href=`/albums/${album.id}`)
                                img(src=`${album.albumArt}`)
                        td(class="albumName")= album.dataValues.name
                        td
                            if locals.userId == user.id
                                button(class="removeAlbum" id=`album-${album.dataValues.id}`) Remove Album

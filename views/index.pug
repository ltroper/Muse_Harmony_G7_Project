extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="./javascripts/index.js" type="module")

block content
  head

  body
    div#app
      div.main-container
        .slideshow-container
          .mySlides.fade
            img(src='/images/banner1.jpg' style='width:100%')
            .text Caption Text
          .mySlides.fade
            img(src='/images/banner2.jpg' style='width:100%')
            .text Caption Two
          .mySlides.fade
            img(src='/images/banner3.jpg' style='width:100%')
            .text Caption Three
          // Next and previous buttons
          a.prev &#x276E;
          a.next &#x276F;
        .middleContainer
          p
        .albums-container
          .albumList-container1
            a(href="/albums/:id")
              img(src='#' alt='album-cover' width=300 height=300)
              p Album title
              p Artist

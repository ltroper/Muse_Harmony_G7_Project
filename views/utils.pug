mixin signedOut
  head
    nav
      .navbar
        .logo
          img.logo-img(src='./images/muse.png' alt='Logo of Muse' width=60 height=60)
        button.login-button.modal-show(onclick="document.getElementById('modal-login').style.display='block'") Login
        div.modal-container#modal-login
          form.modal-form(action="/users/login" method="POST")
            span.close-btn(onclick="document.getElementById('modal-login').style.display='none'")
              i(class="fa-solid fa-rectangle-xmark")
            div.modal-img
              img.logo-img(src='./images/muse.png' alt='Logo of Muse')
            div.modal-inputs
              input(type="hidden" name="_csrf" value=csrfToken)
              label(for="email") Email
              input(type="email" name="email" required)
              label(for="password") Password
              input(type="password" name="password" required)
            div.modal-btn
              button.submit-btn Submit
        button.create-account.modal-show(onclick="document.getElementById('modal').style.display='block'") Create account
        div.modal-container#modal
          form.modal-form(action="/users/signup" method="POST")
            span.close-btn(onclick="document.getElementById('modal').style.display='none'")
              i(class="fa-solid fa-rectangle-xmark")
            div.modal-img
              img.logo-img(src='./images/muse.png' alt='Logo of Muse')
            div.modal-inputs
              input(type="hidden" name="_csrf" value=csrfToken)
              label(for="username") Username
              input(type="text" name="username" required)
              label(for="email") Email
              input(type="email" name="email" required)
              label(for="password") Password
              input(type="password" name="password" required)
              label(for="confirmPassword") Confirm Password
              input(type="password" name="confirmPassword" required)
            div.modal-btn
              button.submit-btn Submit
        form.demo-btn(action='/users/demo' method='post')
          input(type="hidden" name="_csrf" value=csrfToken)
          button.demo-btn(type='submit') Demo User

mixin signedIn
  head
    nav
      .navbar
          .logo
            a(href= "/")
              img.logo-img(src='./images/muse.png' alt='Logo of Muse' width=60 height=60 )
          form(class='logout' action='/albums' method='get')
              button(type='submit') Albums
          form(class='logout' action='/libraries' method='get')
              button(type='submit') Libraries
          form(class='logout' action=`/users/${locals.userId}` method='get')
              button(type='submit') My Profile
          form(class='logout' action='/users/logout' method='post')
              button(type='submit') Logout

mixin validationErrorSummary(errors)
  if errors
    div(class='alert' role='alert')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error

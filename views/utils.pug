block login
    head
        nav
            .navbar
                .logo
                    img(src='./images/WOLF-Main.png' alt='Logo of Wolf' width=60 height=60)
    button.modal-show(onclick="document.getElementById('modal').style.display='block'") Login
    div.modal-container#modal
        form.modal-form(action="/users/login" method="POST")
          span.close-btn(onclick="document.getElementById('modal').style.display='none'")
            i(class="fa-solid fa-rectangle-xmark")
          div.modal-img
            img.wolf-img(src='./images/WOLF-Main.png' alt='Logo of Wolf')
          div.modal-inputs
            input(type="hidden" name="_csrf" value=csrfToken)
            label(for="email") Email
            input(type="email" name="email" required)
            label(for="password") Password
            input(type="password" name="password" required)
          div.modal-btn
            button.submit-btn Submit
            button.cancel-btn Cancel

